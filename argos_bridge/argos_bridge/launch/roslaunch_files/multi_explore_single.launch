<launch>
    <param name="/use_sim_time" value="false" />
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration]"/>
    <arg name="open_rviz" default="true"/>
    <arg name="ns" default="robot_0"/>

    <group ns = "$(arg ns)">
        <!-- <param name="tf_prefix" value="$(arg ns)" /> -->
        <node pkg="tf" type="static_transform_publisher" name="world_to_bot_tf_broadcaster"  args="0 0 0 0 0 0 $(arg ns)/base_footprint $(arg ns)/base_link 10"/>
    </group>
    
    <include file="$(find argos_bridge)/launch/roslaunch_files/gmapping.launch">
        <arg name="ns" value="$(arg ns)"/>
    </include>
    
    <!-- <include file="$(find argos_bridge)/launch/roslaunch_files/move_base.launch">
        <arg name="ns" value="$(arg ns)"/>
    </include> -->

    <!-- <include file="$(find argos_bridge)/launch/roslaunch_files/m-explore.launch">
        <arg name="ns" value="$(arg ns)" />
    </include> -->

<!-- Start rviz -->
<group if="$(arg open_rviz)">
    <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find turtlebot3_gazebo)/rviz/path_following.rviz"/>
</group>

</launch>