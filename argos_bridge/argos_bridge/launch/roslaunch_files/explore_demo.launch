<launch>
    <param name="/use_sim_time" value="true" />
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration]"/>
    <arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>
    <arg name="open_rviz" default="true"/>
    <arg name="ns_0" value="tb3_0"/>
    <!-- <node pkg="tf" type="static_transform_publisher" name="world_to_bot_1_tf_broadcaster"  args="0 0 0 0 0 0 /map /$(arg ns_0)/map 100"/> -->
    <node pkg="tf" type="static_transform_publisher" name="world_to_bot_1_tf_broadcaster"  args="0 0 0 0 0 0 tb3_0/base_footprint tb3_0/base_link 1"/>
    <node pkg="tf" type="static_transform_publisher" name="map_to_odom_1_tf_broadcaster"  args="0 0 0 0 0 0 tb3_0/map tb3_0/odom 1"/>
<!-- ======================================================================================================================== -->
    <!-- TurtleBot3 and Gmapping -->
    <include file="$(find turtlebot3_slam)/launch/turtlebot3_gmapping.launch"  ns="$(arg ns_0)">
        <arg name="model" value="$(arg model)" />
        <arg name="set_map_frame" value="tb3_0/map" />
        <arg name="set_odom_frame" value="tb3_0/odom" />
        <arg name="set_base_frame" value="tb3_0/base_footprint" />
    </include>

