  <!-- The argument 6 is to notify the code that it is in testing mode for the robot Relay -->
  <group ns = "tb3_0">
    <node pkg="mdis_state_machine" type="team_scheduler" name="team_scheduler" args="7 dummy_parent dummy_child" output="screen"/>
