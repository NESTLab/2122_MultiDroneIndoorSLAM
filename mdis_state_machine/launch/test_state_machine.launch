    <node pkg="mdis_state_machine" type="team_scheduler" name="team_scheduler" args="6 test_robot_2 test_robot_3" output="screen"/>
  </group>

  <!-- The argument 6 is to notify the code that it is in testing mode for the robot Relay -->
